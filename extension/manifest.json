
  {
  "manifest_version": 3,
  "name": "Oppli Saver",
  "version": "1.0.1",
  "description": "Save LinkedIn jobs & contacts into Oppli.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://oppli.io/*",
    "https://www.oppli.io/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },

  "action": {
    "default_title": "Oppli Saver",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "512": "icon512.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["injected-button.css"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
